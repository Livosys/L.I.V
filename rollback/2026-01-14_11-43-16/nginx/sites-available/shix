server {
    listen 443 ssl;
    server_name api.shix.livosys.se;

    add_header Access-Control-Allow-Origin "https://preview--shix-aide.lovable.app" always;
    add_header Access-Control-Allow-Methods "GET, POST, OPTIONS" always;
    add_header Access-Control-Allow-Headers "Content-Type, Authorization, X-User-Id, X-Tenant-Key" always;

    location /api/ {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    if ($request_method = OPTIONS) {
        return 204;
    }
}
