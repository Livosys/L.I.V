server {
    listen 443 ssl;
    server_name api.shix.livosys.se;

    ssl_certificate     /etc/letsencrypt/live/api.shix.livosys.se/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.shix.livosys.se/privkey.pem;

    include snippets/shix-cors.conf;

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
