[Unit]
Description=SHIX Backend
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/opt/shix/backend
Environment=PYTHONPATH=/opt/shix/backend
ExecStart=/opt/shix/venv/bin/python -m uvicorn main:app --host 127.0.0.1 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
