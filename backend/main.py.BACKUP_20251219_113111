from fastapi import FastAPI

from routers.chat import router as chat_router
from routers.chat_stream import router as chat_stream_router
from routers.propose_router import router as propose_router
from routers.apply_router import router as apply_router

app = FastAPI(title="SHIX Backend")

@app.get("/")
def root():
    return {"status": "SHIX backend running"}

@app.get("/health")
def health():
    return {"status": "ok"}

app.include_router(chat_router)
app.include_router(chat_stream_router)
app.include_router(propose_router)
app.include_router(apply_router)
